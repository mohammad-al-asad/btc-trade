generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
  directUrl = env("DATABASE_URL_UNPOOLED")
}

datasource db {
  provider = "postgresql"
}


model User{
  id                String @id @default(cuid())
  username          String
  email             String
  password          String
  whiteList         Whitelist[]
}
// add defaut device information to protect 2nd device login. 
// add 2nd device information as well if that one permited
model Whitelist {
  id                String @id @default(cuid())
  networkIP         String
  deviceName        String
  userId            String 
  user              User @relation(fields: [userId], references: [id])
}